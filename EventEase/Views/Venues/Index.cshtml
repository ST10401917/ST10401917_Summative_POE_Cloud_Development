@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}


<h1>Venue Page</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create A New Venue</a>
</p>

<table class="rounded-table">
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                
                <td>@venue.VenueName</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    <div class="venue-info">
                        <img src="@venue.ImageUrl" alt="@venue.VenueName" class="venue-img" />
                    </div>
                </td>
                <td class="venue-actions">
                    <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn-view">Details</a>
                    <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
