@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "🔒 Booking Page";
}

<h1>🔒 Booking Page</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create A New Booking</a>
</p>

<table class="rounded-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Venue)</th>
            <th>@Html.DisplayNameFor(model => model.Event)</th>
            <th>@Html.DisplayNameFor(model => model.BookingDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Venue?.VenueName</td>
                <td>@item.Event?.EventName</td>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn-view">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
