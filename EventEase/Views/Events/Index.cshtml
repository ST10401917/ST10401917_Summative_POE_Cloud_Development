@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Event Page";
}

<h1>Event Page</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create A New Event</a>
</p>

<table class="rounded-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EventName)</th>
            <th>@Html.DisplayNameFor(model => model.EventDate)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.EventType)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.Description</td>
                <td>@item.EventType?.EventTypeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn-view">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
